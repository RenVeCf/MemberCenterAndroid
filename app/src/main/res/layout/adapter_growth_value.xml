<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y106"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_growth_value_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="start"
        android:textColor="@color/tx_check_box" />

    <TextView
        android:id="@+id/tv_growth_value_describe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="start"
        android:textColor="@color/tx_check_box" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_growth_value_exp_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/growth_value_exp" />

        <TextView
            android:id="@+id/tv_growth_value_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/growth_value_exp" />
    </LinearLayout>
</LinearLayout>
