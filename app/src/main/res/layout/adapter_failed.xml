<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginEnd="@dimen/x26"
    android:layout_marginStart="@dimen/x26"
    android:background="@mipmap/bg_coupon_shadow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y50"
            android:layout_marginEnd="@dimen/x80"
            android:layout_marginStart="@dimen/x70"
            android:layout_marginTop="@dimen/y52"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_not_use_item_group_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_failed_item_group_buy" />

            <TextView
                android:id="@+id/tv_not_use_item_group_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y26"
                android:text="@string/group_bug_coupon"
                android:textColor="@color/tx_failed"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y26"
            android:layout_marginTop="@dimen/y42"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_not_use_item_group_buy_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y160"
                android:gravity="start|top"
                android:text="腾讯会员卡腾讯会员卡"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="220dp"
                    android:layout_height="2dp"
                    android:layout_marginBottom="@dimen/y20"
                    android:background="@drawable/shape_line_dash"
                    android:layerType="software" />

                <TextView
                    android:id="@+id/tv_not_use_item_group_buy_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:text="使用期限: 2018.07.10-2018.10.10"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/y30"
        android:layout_marginEnd="@dimen/x56"
        android:src="@mipmap/ic_seal_failed" />
</RelativeLayout>
