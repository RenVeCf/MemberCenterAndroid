<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/x26"
    android:layout_marginEnd="@dimen/x26"
    android:background="@mipmap/bg_coupon_shadow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x70"
            android:layout_marginTop="@dimen/y52"
            android:layout_marginEnd="@dimen/x80"
            android:layout_marginBottom="@dimen/y50"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_coupon_convertibility_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_coupon_convertibility_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y26"
                android:textColor="@color/tx_failed"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y42"
            android:layout_marginBottom="@dimen/y26"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_coupon_convertibility_coupon_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y160"
                android:gravity="start|top"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="220dp"
                    android:layout_height="2dp"
                    android:layout_marginBottom="@dimen/y20"
                    android:background="@drawable/shape_line_dash"
                    android:layerType="software" />

                <TextView
                    android:id="@+id/tv_coupon_convertibility_coupon_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/x56"
        android:src="@mipmap/ic_seal_convertibility" />
</RelativeLayout>
